# ============================================
# TELEGRAM BOT API (Admin Bot)
# ============================================

# Bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# Comma-separated list of admin user IDs
OWNER_IDS=123456789,987654321

# ============================================
# TELEGRAM MTPROTO API (Userbots)
# ============================================

# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here

# ============================================
# DATABASE
# ============================================

# SQLite database path
# Local: sqlite:data/puppeteer.db
# Docker: sqlite:/app/data/puppeteer.db
DATABASE_URL=sqlite:data/puppeteer.db

# ============================================
# AI SERVICES
# ============================================

# Ollama LLM endpoint
# Local: http://localhost:11434
# Docker: http://host.docker.internal:11434
OLLAMA_URL=http://localhost:11434

# Default model for chat responses
OLLAMA_MODEL=llama2

# Whisper API endpoint for voice transcription (optional)
# Local: http://localhost:9000
# Docker: http://host.docker.internal:9000
WHISPER_URL=http://localhost:9000

# ============================================
# LLM SETTINGS
# ============================================

# Temperature for response generation (0.0-2.0)
# Lower = more focused, Higher = more creative
TEMPERATURE=0.7

# Maximum tokens in LLM response
MAX_TOKENS=2048

# Timeout for LLM requests (seconds)
LLM_TIMEOUT_SECONDS=120

# ============================================
# HUMANIZATION SETTINGS (Default values)
# ============================================
# These are defaults for new accounts
# Can be customized per account in database

# Minimum response delay in seconds (simulates reading time)
DEFAULT_MIN_RESPONSE_DELAY=2

# Maximum response delay in seconds
DEFAULT_MAX_RESPONSE_DELAY=15

# Typing speed in characters per minute
DEFAULT_TYPING_SPEED=200

# Probability to use reply vs regular message (0-100)
DEFAULT_USE_REPLY_PROBABILITY=70

# Ignore messages older than X seconds
DEFAULT_IGNORE_OLD_MESSAGES=300

# Always respond in private messages (1=yes, 0=no)
DEFAULT_ALWAYS_RESPOND_PM=1

# ============================================
# FEATURES
# ============================================

# Enable voice message transcription
VOICE_ENABLED=false

# Enable image analysis
VISION_ENABLED=false

# Enable web search integration
WEB_SEARCH_ENABLED=false

# ============================================
# LOGGING
# ============================================

# Rust log level: trace, debug, info, warn, error
RUST_LOG=info